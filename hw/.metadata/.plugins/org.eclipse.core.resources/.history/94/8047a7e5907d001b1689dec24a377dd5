package hw;
import java.util.Scanner;

public class hw1 {

	public static void main(String[] args) {
		// calculate avenger
		Scanner scanner = new Scanner(System.in);
		float avenger = 0;
		for(int i = 1; i <= 3; i++){
			avenger += scanner.nextFloat();
        }
		avenger = avenger/3;
		
		// print avenger score and level
        System.out.printf("%s", Float.toString(avenger));
		
	}

}
